<header>
    <h1>Votes</h1>
</header>

<section id="main">
    <ul id="vote-list">
        #foreach($vote in $votes)
            <li>
                <div class="view">
                    <label>$vote.topic</label>
                    <label>$vote.payload</label>
                </div>
            </li>
        #end
    </ul>
</section>

<section id="counter" class="counter">
    <div class="main_counter_area">
        <div class="overlay p-y-3">
            <div class="container">
                <div class="row">
                    <div class="main_counter_content text-center white-text wow fadeInUp">
                        <div class="col-md-3">
                            <div class="single_counter p-y-2 m-t-1">
                                <i class="fa chevron-circle-left m-b-1"></i>
                                <h2 id="answer-a-counter" class="statistic-counter">100</h2>
                                <p>Answer A</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="single_counter p-y-2 m-t-1">
                                <i class="fa chevron-circle-right m-b-1"></i>
                                <h2 id="answer-b-counter" class="statistic-counter">100</h2>
                                <p>Answer B</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<footer>
    <span id="vote-count">
        <strong>$voteCount</strong> votes in total
    </span>
    <button class="destroy" ic-delete-from="/votes">Clear all votes</button>
</footer>
